
<h3>Create new document</h3>
<div class="row">
	<div class="col-md-1"></div>
	<div class="col-md-10">
		<%=form_tag(controller: "home",action: "create",method: "post") do%>
			<div class="table-responsive" id="document-form">
				<table class="table table-bordered" id="user-document-table">
					<thead>
						<tr>
							<th>Title</th>
							<th>Content</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							
							<div class="form-group">
								<td><%=text_field_tag :title1,nil,placeholder: "Enter Title of Content",class: "form-control"%></td>
							</div>

							<div class="form-group">
								<td><%=text_area_tag :content1,nil,placeholder: "Enter Content",class: "form-control"%>
								</td>	
							</div>
						</tr>
					</tbody>
				</table>
				<%= hidden_field_tag :rowcount ,value="1"%>
				<p>
					<div class="btn btn-info" onclick="insRow()">
						Add New Row 
					</div>
					</p>
				<div class="form-group" id="submit-create-document">
					<%=submit_tag "Create Document",class: "btn btn-primary"%>	
				</div>
			</div>
		<%end%>
	</div>
	<div class="col-md-1"></div>
</div>



