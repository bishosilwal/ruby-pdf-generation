<div class="row mx-2">
	<%if user_signed_in?%>
		<div class="col-12"><h3>Shared With Me</h3></div>

		<%if @access_folders.any?%>
		<!-- file show  -->
			<div class="col-12">
				<div class="row">
					<%@access_folders.each do |folder|%>
						<%=link_to folder_path(folder.folder_id) do%>
							<div class="col-auto">		
								<div class="card bg-light border-success text-center custom-card ">
									<div class="card-header p-1 folder-icon">
										<%=Folder.find(folder.folder_id).name%>
									</div>
									<div class="card-body p-2 folder-icon">
										<div>
											<i class="fa fa-folder-o fa-4x"></i>
										</div>
										<%=User.find(folder.owner_id).email%>
									</div>
									<div class="card-footer p-1">
										<%=link_to unsharefolder_path(folder_id: folder.id),method: :delete,data: {confirm: "Are you sure want to UnAccess Folder?"} do  %>
											<i class="fa fa-share-square-o fa-lg" style="color: black;" data-toggle="tooltip" data-placement="bottom" title="UnAccess"></i>	
										<%end%>
										
									</div>
								</div>
							</div>
						<%end %>
					<%end%>

					<%@access_documents.each do |document|%>
						<div class="col-auto">		
							<div class="card bg-light border-success text-center custom-card">
								<div class="card-header p-1">
									<%=UserDocument.find(document.doc_id).document_file_name%>
								</div>
								<div class="card-body p-2">
									<div>
										<i class="fa fa-file-pdf-o fa-4x"></i>
									</div>
									<%=User.find(document.owner_id).email%>
								</div>
								<div class="card-footer p-1">
									<span  data-id=<%=document.doc_id%> data-toggle="modal" data-target="#viewPdf" data-toggle="tooltip" data-placement="bottom" title="View">
										<i class="fa fa-eye fa-lg"></i>
									</span>
									<%=link_to share_path(document),method: :delete,data: {confirm: "Are you sure want to unaccess Document?"} do  %>
										<i class="fa fa-chain-broken fa-lg" style="color: black;" data-toggle="tooltip" data-placement="bottom" title="Unaccess"></i>	
									<%end%>
									
								</div>
							</div>
						</div>
					<%end%>
					<%=render "shared/viewpdf" %>
				</div>
				
			</div>
			<!-- file show end -->
			<div class="row mx-auto mt-5">
				<%=paginate @access_documents,param_name: :user_documents%>
			</div>
			
		<%end%>
	<%else%>
		<h3>Please signed in to create document or view your documents</h3>
	<%end%>
</div>



